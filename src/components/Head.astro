---
const title = 'margin-js | kuworking'
const url = 'https://kuworking.github.io'
const canonical = url + Astro.url.pathname

const schemaOrgJSONLD = JSON.stringify({
  '@context': 'https://schema.org',
  title: title,
  name: title,
  headline: title,
  description: title,
  mainEntityOfPage: {
    '@type': 'WebSite',
    '@id': 'https://schema.org/WebSite',
  },
  author: {
    '@type': 'Person',
    name: 'margin-js | kuworking',
  },
  publisher: {
    '@type': 'Person',
    name: 'margin-js | kuworking',
    logo: {
      '@type': 'ImageObject',
      url: url + '/favicon.png',
    },
  },
})

// https://github.com/withastro/astro/issues/3544
---

